<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/titleFragment">

    <fragment
        android:id="@+id/gameFragment"
        android:name="com.example.android.geoguessrlite.ui.game.GameFragment"
        android:label="GameFragment" >
        <action
            android:id="@+id/action_gameFragment_to_resultFragment"
            app:destination="@id/resultFragment" />
    </fragment>
    <fragment
        android:id="@+id/resultFragment"
        android:name="com.example.android.geoguessrlite.ui.result.ResultFragment"
        android:label="ResultFragment" >
        <argument
            android:name="finalScore"
            app:argType="long" />
        <argument
            android:name="gameType"
            app:argType="string" />
        <argument
            android:name="gameDuration"
            app:argType="integer" />
        <action
            android:id="@+id/action_resultFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_resultFragment_to_titleFragment"
            app:destination="@id/titleFragment" />
        <action
            android:id="@+id/action_resultFragment_to_leaderboardFragment"
            app:destination="@id/leaderboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/titleFragment"
        android:name="com.example.android.geoguessrlite.ui.title.TitleFragment"
        android:label="TitleFragment" >
        <action
            android:id="@+id/action_titleFragment_to_selectionFragment"
            app:destination="@id/selectionFragment" />
        <action
            android:id="@+id/action_titleFragment_to_gameFragment"
            app:destination="@id/gameFragment" />
        <action
            android:id="@+id/action_titleFragment_to_leaderboardFragment"
            app:destination="@id/leaderboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/selectionFragment"
        android:name="com.example.android.geoguessrlite.ui.selection.SelectionFragment"
        android:label="SelectionFragment" >
        <argument
            android:name="selectionType"
            app:argType="string" />
        <action
            android:id="@+id/action_selectionFragment_to_titleFragment"
            app:destination="@id/titleFragment" />
    </fragment>
    <fragment
        android:id="@+id/leaderboardFragment"
        android:name="com.example.android.geoguessrlite.ui.leaderboard.LeaderboardFragment"
        android:label="LeaderboardFragment" />
</navigation>